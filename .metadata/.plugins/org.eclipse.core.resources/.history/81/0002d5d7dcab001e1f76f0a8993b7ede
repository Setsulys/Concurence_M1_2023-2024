package fr.uge.exam.exo2;

import java.util.ArrayList;
import java.util.concurrent.ArrayBlockingQueue;

import fr.uge.exam.exo2.PokeAPI.*;

public class PokemonFactory {
	public static void main(String[] args) {
		int captureThread =5;
		int possibleValue =11;
		int putInCrate = 2;
		var capture = new ArrayList<Pokemon>();
		var trap = new ArrayList<Pokemon>();
		var crate = new ArrayList<Pokeball>;
		for(var i = 0;i < captureThread; i++) {
			Thread.ofPlatform().start(()->{
				for(;;) {
					try {
						capture.add(PokeAPI.capture());
					} catch (InterruptedException e) {
						throw new AssertionError(e);
					}
				}
			});
		}
		Thread.ofPlatform().start(()->{
			for(;;){
				if(capture.getFirst().rarity()!=5) {
					trap.add(capture.removeFirst());
				}
			}
		});
		Thread.ofPlatform().start(()->{
			for(;;){
				if(capture.getFirst().rarity()==5) {
					trap.add(capture.removeFirst());
				}
			}
		});
		for(var i=0;i< possibleValue;i++) {
			for(var j = 0 ;j < putInCrate;j++) {
				Thread.ofPlatform().start(()->{
					
				});
			}
		}
	}
}
